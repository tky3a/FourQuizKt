<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="1問目"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCount"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:textSize="20sp"/>
    <TextView
            android:text="question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvQuestion"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCount" android:layout_marginTop="24dp"
            android:textSize="24sp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion" android:layout_marginTop="90dp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            tools:layout_editor_absoluteX="166dp" app:layout_constraintTop_toBottomOf="@+id/btn0"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            tools:layout_editor_absoluteX="161dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn3"
            tools:layout_editor_absoluteX="163dp" app:layout_constraintTop_toBottomOf="@+id/btn2"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nextBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>